mixin payment()
    section.payment#payment
        .container
            h1.payment-title PAYMENT PLAN
            .percents
                .percents-item
                    h3 <span class="numbers" data-number="15">0</span>%
                    p On book
                .percents-item
                    h3 <span class="numbers" data-number="60">0</span>%
                    p During construction
                .percents-item
                    h3 <span class="numbers" data-number="25">0</span>%
                    p Post handover
            h2.partners-title MORTGAGE SOLUTION PARTNERS
            .partners
                a(href="#")
                    picture
